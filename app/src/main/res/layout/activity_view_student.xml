<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C3EFEF"
    android:gravity="center_horizontal"
    tools:context=".ViewStudent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="View Student Details" />

    <EditText
        android:id="@+id/searchSID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#000000"
        android:hint="Enter Student ID" />

    <Button
        android:id="@+id/ssi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Search student information" />

    <EditText
        android:id="@+id/editSID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#000000"
        android:inputType="text"
        android:hint="ID" />

    <EditText
        android:id="@+id/editSNAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#000000"
        android:inputType="text"
        android:hint="Name" />

    <TextView
        android:id="@+id/weekAttended"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:hint="weeks attended" />

    <Button
        android:id="@+id/ui"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Update Student Information" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <EditText
        android:id="@+id/numClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#000000"
        android:inputType="text"
        android:hint="Number of classes conducted" />

    <Button
        android:id="@+id/gp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Get Attendance Percentage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/online"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Total" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Online" />
    </LinearLayout>
</LinearLayout>
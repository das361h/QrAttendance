<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    tools:context=".viewWeekly">

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text="Weekly Details" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/loadWeekly"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Load weekly student details" />

    <LinearLayout
        android:id="@+id/StudentListContainer"
        android:layout_width="match_parent"
        android:layout_height="482dp"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:foregroundTint="#000000"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Checked entities will be removed once clicked" />

    <Button
        android:id="@+id/update"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:text="Delete Checked" />
</LinearLayout>